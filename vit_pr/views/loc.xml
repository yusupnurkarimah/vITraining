<odoo>
    <data>
        <record id="view_name_request_form" model="ir.ui.view">
            <field name="name">vit_product_request_form</field>
            <field name="model">vit.product.request</field>
            <field name="inherit_id" ref="vit_product_request.view_product_request_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <label for="name" position="replace">
                    <label for="name" string="Purchase Request Number"/>
                </label>
                <field name="location_id" position="replace">
                    <field name="location_id" invisible="1"/>
                </field>
                <field name="business_id" position="replace">
                    <field name="business_id"  invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>